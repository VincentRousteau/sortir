{% extends "base.html.twig" %}

{% block title %}
    {{ parent() }} - Accueil
{% endblock %}

{% block body %}
    <h1>Liste des sorties</h1>

    <p>Date du jour : {{ 'now'|date('d/m/Y') }}</p>
    <p>{{ personne.prenom~' '~personne.nom }}</p>

    {{ form_start(sortiesForm) }}

    {{ form_widget(sortiesForm) }}

    <button>Rechercher</button>

    {{ form_end(sortiesForm) }}

    <p>Sorties organisées :</p>
    <ul>
        {% for sortie in sortiesOrganisees %}
            <li>
                {{ 'Nom : '~ sortie.nom~ ',  date de début :' ~sortie.dateHeureDebut|date('d/m/Y')~',  durée de la sortie : '~sortie.duree~ ' minutes' }}
            </li>
        {% endfor %}
    </ul>

    <br>

    <p>Sorties auxquelles je participe : </p>
    <ul>
        {% for sortie in sortiesParticipees %}
            <li>
                {{ 'Nom : '~ sortie.nom~ ',  date de début :' ~sortie.dateHeureDebut|date('d/m/Y')~',  durée de la sortie : '~sortie.duree~ ' minutes' }}
            </li>
        {% endfor %}
    </ul>

    <br>

    <p>Sorties auxquelles je ne participe pas : </p>
    <ul>
        {% for sortie in sortiesNonParticipees %}
            <li>
                {{ 'Nom : '~ sortie.nom~ ',  date de début :' ~sortie.dateHeureDebut|date('d/m/Y')~',  durée de la sortie : '~sortie.duree~ ' minutes' }}
            </li>
        {% endfor %}
    </ul>

    <br>

    <p>Sorties passées : </p>
    <ul>
        {% for sortie in sortiesPassees %}
            <li>
                {{ 'Nom : '~ sortie.nom~ ',  date de début :' ~sortie.dateHeureDebut|date('d/m/Y')~',  durée de la sortie : '~sortie.duree~ ' minutes' }}
            </li>
        {% endfor %}
    </ul>

    <br>

    <p>Sorties par recherche : </p>
    <ul>
        {% for sortie in sortiesParRecherche %}
            <li>
                {{ 'Nom : '~ sortie.nom~ ',  date de début :' ~sortie.dateHeureDebut|date('d/m/Y')~',  durée de la sortie : '~sortie.duree~ ' minutes' }}
            </li>
        {% endfor %}
    </ul>
{% endblock %}